<?xml version="1.0"?>
<!DOCTYPE routes PUBLIC "-//Liferay//DTD Friendly URL Routes 7.0.0//EN" "http://www.liferay.com/dtd/liferay-friendly-url-routes_7_0_0.dtd">

<routes>
	<route>
		<pattern>/edit</pattern>
		<implicit-parameter name="tabs">edit</implicit-parameter>
	</route>
	<route>
		<pattern>/post</pattern>
		<implicit-parameter name="tabs">post</implicit-parameter>
	</route>
	<route>
		<pattern>/pre</pattern>
		<implicit-parameter name="tabs">pre</implicit-parameter>
	</route>
	<route>
		<pattern>/prep</pattern>
		<implicit-parameter name="tabs">prep</implicit-parameter>
	</route>
	<route>
		<pattern>/rsvp/{memberId:\d+}</pattern>
		<implicit-parameter name="mvcPath">/rsvp.jsp</implicit-parameter>
	</route>

	<route>
		<pattern>/{tripId:\d+}/edit</pattern>
		<implicit-parameter name="tabs">edit</implicit-parameter>
	</route>
	<route>
		<pattern>/{tripId:\d+}/post</pattern>
		<implicit-parameter name="tabs">post</implicit-parameter>
	</route>
	<route>
		<pattern>/{tripId:\d+}/pre</pattern>
		<implicit-parameter name="tabs">pre</implicit-parameter>
	</route>
	<route>
		<pattern>/{tripId:\d+}/prep</pattern>
		<implicit-parameter name="tabs">prep</implicit-parameter>
	</route>
	<route>
		<pattern>/{tripId:\d+}/rsvp/{memberId:\d+}</pattern>
		<implicit-parameter name="mvcPath">/rsvp.jsp</implicit-parameter>
	</route>

	<route>
		<pattern>/{tripName}/edit</pattern>
		<implicit-parameter name="tabs">edit</implicit-parameter>
	</route>
	<route>
		<pattern>/{tripName}/post</pattern>
		<implicit-parameter name="tabs">post</implicit-parameter>
	</route>
	<route>
		<pattern>/{tripName}/pre</pattern>
		<implicit-parameter name="tabs">pre</implicit-parameter>
	</route>
	<route>
		<pattern>/{tripName}/prep</pattern>
		<implicit-parameter name="tabs">prep</implicit-parameter>
	</route>
	<route>
		<pattern>/{tripName}/rsvp/{memberId:\d+}</pattern>
		<implicit-parameter name="mvcPath">/rsvp.jsp</implicit-parameter>
	</route>
</routes>